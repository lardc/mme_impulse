<UserControl x:Class="SCME.WpfControlLibrary.DataTemplates.ProfileHierarchicalDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:convertes="clr-namespace:SCME.WpfControlLibrary.IValueConverters"
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="200">
    <UserControl.Resources>
        <convertes:TryBooleanToVisibilityInverseConverter x:Key="B2VI" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding Name}"/>
        <Grid Grid.Column="1" Grid.Row="0" Visibility="{Binding IsTop, Converter={StaticResource B2VI}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding Version}" />
            <TextBlock Margin="5,0,0,0" Grid.Column="1" Grid.Row="0" Text="{Binding Timestamp, StringFormat=hh:mm:ss dd-MM-yyyy}"/>
        </Grid>

    </Grid>
</UserControl>
