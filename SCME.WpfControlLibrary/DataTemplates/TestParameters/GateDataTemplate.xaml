<UserControl x:Class="SCME.WpfControlLibrary.DataTemplates.TestParameters.GateDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res="clr-namespace:SCME.WpfControlLibrary.Properties"
             xmlns:customControls="clr-namespace:SCME.WpfControlLibrary.CustomControls"
             xmlns:gate="clr-namespace:SCME.Types.Gate;assembly=SCME.Types"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=gate:TestParameters}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <customControls:CheckBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" IsChecked="{Binding IsCurrentEnabled}" Content="{x:Static res:Resources.PureVgt}"/>
        <Label Grid.Column="2" Grid.Row="0" Content="{x:Static res:Resources.HoldingCurrent}" />
        <customControls:CheckBox Grid.Column="3" Grid.Row="0" IsChecked="{Binding IsIhEnabled}"/>

        <Label Grid.Column="0" Grid.Row="1" Content="{x:Static res:Resources.HoldingStrikeCurrent}" />
        <customControls:CheckBox Grid.Column="1" Grid.Row="1" IsChecked="{Binding IsIhStrikeCurrentEnabled}" />
        <Label Grid.Column="2" Grid.Row="1"  Content="{x:Static res:Resources.LatchingCurrent}" />
        <customControls:CheckBox Grid.Column="3" Grid.Row="1" IsChecked="{Binding IsIlEnabled}"  />

        <Label Grid.Column="0" Grid.Row="2" Content="{x:Static res:Resources.MaxResistance_Ohm}" />
        <customControls:SmartLabel Grid.Column="1" Grid.Row="2" Value="{Binding Resistance}" />

        <Label Grid.Column="0" Grid.Row="3" Content="{x:Static res:Resources.MaxIgt_mA}" />
        <customControls:SmartLabel Grid.Column="1" Grid.Row="3" Value="{Binding IGT}"/>
        <Label Grid.Column="2" Grid.Row="3" Content="{x:Static res:Resources.MaxVgt_V}" />
        <customControls:SmartLabel Grid.Column="3" Grid.Row="3" Value="{Binding VGT }" />

        <Label Grid.Column="0" Grid.Row="4" Content="{x:Static res:Resources.MaxIh_mA}" />
        <customControls:SmartLabel Grid.Column="1" Grid.Row="4" Value="{Binding IH }" />
        <Label Grid.Column="2" Grid.Row="4" Content="{x:Static res:Resources.MaxIl_mA}" />
        <customControls:SmartLabel Grid.Column="3" Grid.Row="4" Value="{Binding IL}" />
    </Grid>
</UserControl>
