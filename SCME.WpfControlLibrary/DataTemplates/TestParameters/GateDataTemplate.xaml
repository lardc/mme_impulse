<UserControl x:Class="SCME.WpfControlLibrary.DataTemplates.TestParameters.GateDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res="clr-namespace:SCME.WpfControlLibrary.Properties"
             xmlns:local="clr-namespace:SCME.WpfControlLibrary.DataTemplates.TestParameters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SCME.WpfControlLibrary;component/Resources/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0"  Visibility="{Binding IsCurrentEnabled, Converter={StaticResource B2V}}" Text="{x:Static res:Resources.PureVgt}" />
            <Path Grid.Column="1" Grid.Row="0"  Data="M 0 1.5 L 1.5 3 L 3 0" StrokeThickness="1.5" Width="60" Visibility="{Binding IsCurrentEnabled, Converter={StaticResource B2V}}" Stretch="Uniform"  HorizontalAlignment="Right" />
            <TextBlock Grid.Column="2" Grid.Row="0" Text="{x:Static res:Resources.HoldingCurrent}" Visibility="{Binding IsIhEnabled, Converter={StaticResource B2V}}" />
            <Path Grid.Column="3" Grid.Row="0"  Data="M 0 1.5 L 1.5 3 L 3 0" StrokeThickness="1.5" Visibility="{Binding IsIhEnabled, Converter={StaticResource B2V}}" Stretch="Uniform"  HorizontalAlignment="Right" />

            <TextBlock Grid.Column="0" Grid.Row="1" Visibility="{Binding IsIhStrikeCurrentEnabled, Converter={StaticResource B2V}}" Text="{x:Static res:Resources.HoldingStrikeCurrent}" />
            <Path Grid.Column="1" Grid.Row="1" Data="M 0 1.5 L 1.5 3 L 3 0" StrokeThickness="1.5"  Visibility="{Binding IsIhStrikeCurrentEnabled, Converter={StaticResource B2V}}" Stretch="Uniform"  HorizontalAlignment="Right" />
            <TextBlock Grid.Column="2" Grid.Row="1"  Visibility="{Binding IsIlEnabled, Converter={StaticResource B2V}}" Text="{x:Static res:Resources.LatchingCurrent}" />
            <Path Grid.Column="4" Grid.Row="1" Data="M 0 1.5 L 1.5 3 L 3 0" StrokeThickness="1.5" Visibility="{Binding IsIlEnabled, Converter={StaticResource B2V}}" Stretch="Uniform"  HorizontalAlignment="Right"  />

            <TextBlock Grid.Column="0" Grid.Row="2" Text="{x:Static res:Resources.MaxResistance_Ohm}" />
            <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding Resistance}" />

            <TextBlock Grid.Column="0" Grid.Row="3" Text="{x:Static res:Resources.MaxIgt_mA}" />
            <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding IGT }" />
            <TextBlock Grid.Column="2" Grid.Row="3" Text="{x:Static res:Resources.MaxVgt_V}" />
            <TextBlock Grid.Column="3" Grid.Row="3" Text="{Binding VGT }" />

            <TextBlock Grid.Column="0" Grid.Row="4" Text="{x:Static res:Resources.MaxIh_mA}" />
            <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding IH }" />
            <TextBlock Grid.Column="2" Grid.Row="4" Text="{x:Static res:Resources.MaxIl_mA}" />
            <TextBlock Grid.Column="3" Grid.Row="4" Text="{Binding IL}" />
        </Grid>
</UserControl>
