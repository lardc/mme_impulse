<UserControl x:Class="SCME.WpfControlLibrary.DataTemplates.TestParameters.QrrTqDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res="clr-namespace:SCME.WpfControlLibrary.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SCME.WpfControlLibrary;component/Resources/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="84*" />
                        <ColumnDefinition Width="14*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0"  Text="{x:Static res:Resources.QrrTqMode}" />
                    <TextBlock Grid.Column="1" Grid.Row="0"  Text="{Binding Mode, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Column="0" Grid.Row="1"  Text="{x:Static res:Resources.QrrTqTrrMeasureBy9050Method}" Visibility="{Binding TrrMeasureBy9050Method, Converter={StaticResource B2V}}"/>
                    <Path Grid.Column="1" Grid.Row="1"  Data="M 0 1.5 L 1.5 3 L 3 0" StrokeThickness="1.5" Visibility="{Binding TrrMeasureBy9050Method, Converter={StaticResource B2V}}" Stretch="Uniform"   />

                    <TextBlock Grid.Column="0" Grid.Row="2"  Text="{x:Static res:Resources.QrrTqDirectCurrent}" />
                    <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding DirectCurrent, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Column="0" Grid.Row="3"  Text="{x:Static res:Resources.QrrTqDCPulseWidth}" />
                    <TextBlock Grid.Column="1" Grid.Row="3"  Text="{Binding DCPulseWidth, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Column="0" Grid.Row="4"  Text="{x:Static res:Resources.QrrTqDCRiseRate}" />
                    <TextBlock Grid.Column="1" Grid.Row="4"  Text="{Binding DCRiseRate, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Column="0" Grid.Row="5"  Text="{x:Static res:Resources.QrrTqDCFallRate}" />
                    <TextBlock Grid.Column="1" Grid.Row="5"  Text="{Binding DCFallRate, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource TDcFallRateVFE}}" />

                    <TextBlock Grid.Column="0" Grid.Row="6"  Text="{x:Static res:Resources.QrrTqOffStateVoltage}" />
                    <TextBlock Grid.Column="1" Grid.Row="6"  Text="{Binding OffStateVoltage, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Column="0" Grid.Row="7"  Text="{x:Static res:Resources.QrrTqOsvRate}" />
                    <TextBlock Grid.Column="1" Grid.Row="7"  Text="{Binding OsvRate, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource TOsvRateVFE}}" />
                </Grid>
</UserControl>
