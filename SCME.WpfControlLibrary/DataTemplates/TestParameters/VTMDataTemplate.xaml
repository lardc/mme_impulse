<UserControl x:Class="SCME.WpfControlLibrary.DataTemplates.TestParameters.VTMDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res="clr-namespace:SCME.WpfControlLibrary.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SCME.WpfControlLibrary;component/Resources/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="{x:Static res:Resources.Type}" />
        <TextBlock Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding TestType, Converter={StaticResource VT2S}, UpdateSourceTrigger=PropertyChanged}" />

        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Visibility="{Binding TestType, ConverterParameter=0, Converter={StaticResource VT2V}, UpdateSourceTrigger=PropertyChanged}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Text="{x:Static res:Resources.Current_A}" />
            <TextBlock Grid.Column="1" Grid.Row="0"  Text="{Binding RampCurrent}" />
            <TextBlock Grid.Column="2" Grid.Row="0" Text="{x:Static res:Resources.Time_us}" />
            <TextBlock Grid.Column="3" Grid.Row="0"  Text="{Binding RampTime}" />

            <TextBlock Grid.Column="0" Grid.Row="1"   Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V}}" Text="{x:Static res:Resources.IsHeatEnabled}" />
            <Path Grid.Column="1" Grid.Row="1" Data="M 0 1.5 L 1.5 3 L 3 0" StrokeThickness="1.5" Stretch="Uniform" Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V}}" />
            
            <TextBlock Grid.Column="0" Grid.Row="2" Text="{x:Static res:Resources.HeatCurrent_A}" Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V} }" />
            <TextBlock Grid.Column="1" Grid.Row="2"  Text="{Binding RampOpeningCurrent }" Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V} }" />
            <TextBlock Grid.Column="3" Grid.Row="2" Text="{x:Static res:Resources.HeatTime_us}" Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V} }" />
            <TextBlock Grid.Column="4" Grid.Row="2" Text="{Binding RampOpeningTime }" Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V} }" />
        </Grid>

        <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" Visibility="{Binding TestType, ConverterParameter=1, Converter={StaticResource VT2V}, UpdateSourceTrigger=PropertyChanged}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="{x:Static res:Resources.Current_A}" />
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding SinusCurrent}" />
                <TextBlock Grid.Column="2" Grid.Row="0" Text="{x:Static res:Resources.Time_us}" />
                <TextBlock Grid.Column="3" Grid.Row="0" Text="{Binding SinusTime }" />
            </Grid>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4" Visibility="{Binding TestType, ConverterParameter=2, Converter={StaticResource VT2V}, UpdateSourceTrigger=PropertyChanged}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="{x:Static res:Resources.Current_A}" />
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding CurveCurrent }" />
                <TextBlock Grid.Column="2" Grid.Row="0" Text="{x:Static res:Resources.Time_us}" />
                <TextBlock Grid.Column="3" Grid.Row="0" Text="{Binding CurveTime }" />

                <TextBlock Grid.Column="0" Grid.Row="1" Text="{x:Static res:Resources.CurveFactor}" />
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding CurveFactor }" />
                <TextBlock Grid.Column="2" Grid.Row="1" Text="{x:Static res:Resources.AdditionalTime_us}" />
                <TextBlock Grid.Column="3" Grid.Row="1" Text="{Binding CurveAddTime }" />
            </Grid>

        </Grid>

        <TextBlock Grid.Column="0" Grid.Row="4"  Visibility="{Binding UseFullScale, Converter={StaticResource B2V}}" Text="{x:Static res:Resources.UseFullScale}" />
        <Path Grid.Column="1" Grid.Row="4" Data="M 0 1.5 L 1.5 3 L 3 0" StrokeThickness="1.5" Visibility="{Binding UseFullScale, Converter={StaticResource B2V}}" Stretch="Uniform"    />
        <TextBlock Grid.Column="2" Grid.Row="4"  Visibility="{Binding UseLsqMethod, Converter={StaticResource B2V}}" Text="{x:Static res:Resources.UseLsqMethod}" />
        <Path Grid.Column="3" Grid.Row="4" Data="M 0 1.5 L 1.5 3 L 3 0" StrokeThickness="1.5" Width="60" Visibility="{Binding UseLsqMethod, Converter={StaticResource B2V}}" Stretch="Uniform"    />

        <TextBlock Grid.Column="0" Grid.Row="5" Text="{x:Static res:Resources.Count}" />
        <TextBlock Grid.Column="1" Grid.Row="5" Text="{Binding Count }" />
        <TextBlock Grid.Column="2" Grid.Row="5" Text="{x:Static res:Resources.MaxVtm_V}"/>
        <TextBlock Grid.Column="3" Grid.Row="5" Text="{Binding VTM }" />

    </Grid>
</UserControl>
