<UserControl x:Class="SCME.WpfControlLibrary.DataTemplates.TestParameters.VTMDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:res="clr-namespace:SCME.WpfControlLibrary.Properties"
             xmlns:customControls="clr-namespace:SCME.WpfControlLibrary.CustomControls"
             xmlns:vtm="clr-namespace:SCME.Types.VTM;assembly=SCME.Types"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=vtm:TestParameters}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SCME.WpfControlLibrary;component/Resources/ValueConvertersDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="{x:Static res:Resources.Type}" />
        <customControls:SmartLabel Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Value="{Binding TestType, Converter={StaticResource VT2S}}" />

        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Visibility="{Binding TestType, ConverterParameter=0, Converter={StaticResource VT2V}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Content="{x:Static res:Resources.Current_A}" />
            <customControls:SmartLabel Grid.Column="1" Grid.Row="0" Value="{Binding RampCurrent}" />
            <Label Grid.Column="2" Grid.Row="0" Content="{x:Static res:Resources.Time_us}" />
            <customControls:SmartLabel Grid.Column="3" Grid.Row="0" Value="{Binding RampTime}" />

            <customControls:CheckBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" IsEnabled="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V}}" Content="{x:Static res:Resources.IsHeatEnabled}"/>

            <Label Grid.Column="0" Grid.Row="2" Content="{x:Static res:Resources.HeatCurrent_A}"
                   Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V} }" />
            <customControls:SmartLabel Grid.Column="1" Grid.Row="2" Value="{Binding RampOpeningCurrent }"
                                       Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V} }" />
            <Label Grid.Column="3" Grid.Row="2" Content="{x:Static res:Resources.HeatTime_us}"
                   Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V} }" />
            <customControls:SmartLabel Grid.Column="3" Grid.Row="2" Value="{Binding RampOpeningTime }"
                                       Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V} }" />
        </Grid>

        <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4"
              Visibility="{Binding TestType, ConverterParameter=1, Converter={StaticResource VT2V}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="{x:Static res:Resources.Current_A}" />
                <customControls:SmartLabel Grid.Column="1" Grid.Row="0" Value="{Binding SinusCurrent}" />
                <Label Grid.Column="2" Grid.Row="0" Content="{x:Static res:Resources.Time_us}" />
                <customControls:SmartLabel Grid.Column="3" Grid.Row="0" Value="{Binding SinusTime }" />
            </Grid>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4"
              Visibility="{Binding TestType, ConverterParameter=2, Converter={StaticResource VT2V}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="{x:Static res:Resources.Current_A}" />
                <customControls:SmartLabel Grid.Column="1" Grid.Row="0" Value="{Binding CurveCurrent }" />
                <Label Grid.Column="2" Grid.Row="0" Content="{x:Static res:Resources.Time_us}" />
                <customControls:SmartLabel Grid.Column="3" Grid.Row="0" Value="{Binding CurveTime }" />

                <Label Grid.Column="0" Grid.Row="1" Content="{x:Static res:Resources.CurveFactor}" />
                <customControls:SmartLabel Grid.Column="1" Grid.Row="1" Value="{Binding CurveFactor }" />
                <Label Grid.Column="2" Grid.Row="1" Content="{x:Static res:Resources.AdditionalTime_us}" />
                <customControls:SmartLabel Grid.Column="3" Grid.Row="1" Value="{Binding CurveAddTime }" />
            </Grid>

        </Grid>

        <customControls:CheckBox Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" IsEnabled="{Binding UseFullScale, Converter={StaticResource B2V}}" Content="{x:Static res:Resources.UseFullScale}"/>
        
        <customControls:CheckBox Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" IsEnabled="{Binding UseLsqMethod, Converter={StaticResource B2V}}" Content="{x:Static res:Resources.UseLsqMethod}"/>
        
        <Label Grid.Column="0" Grid.Row="5" Content="{x:Static res:Resources.Count}" />
        <customControls:SmartLabel Grid.Column="1" Grid.Row="5" Value="{Binding Count }" />
        <Label Grid.Column="2" Grid.Row="5" Content="{x:Static res:Resources.MaxVtm_V}" />
        <customControls:SmartLabel Grid.Column="3" Grid.Row="5" Value="{Binding VTM }" />

    </Grid>
</UserControl>