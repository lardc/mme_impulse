<Page x:Class="SCME.WpfControlLibrary.Pages.ProfilesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:res="clr-namespace:SCME.WpfControlLibrary.Properties"
      xmlns:profilesPageComponents="clr-namespace:SCME.WpfControlLibrary.CustomControls.ProfilesPageComponents"
      xmlns:dataTemplate="clr-namespace:SCME.WpfControlLibrary.DataTemplates"
      xmlns:testParameters="clr-namespace:SCME.WpfControlLibrary.DataTemplates.TestParameters"
      xmlns:customControls="clr-namespace:SCME.WpfControlLibrary.CustomControls"
      xmlns:pages="clr-namespace:SCME.WpfControlLibrary.Pages"
      xmlns:profiles="clr-namespace:SCME.Types.Profiles;assembly=SCME.Types"
      DataContext="{Binding RelativeSource={RelativeSource Self}, Path=ProfileVm}"
      mc:Ignorable="d" Loaded="Page_Loaded" Name="MainPage"
      d:DesignHeight="1024" d:DesignWidth="1280"
      Title="{x:Static res:Resources.Profiles}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SCME.WpfControlLibrary;component/Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="0" IsEnabled="{Binding IsEditModeInActive}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <ComboBox Grid.Column="0" Grid.Row="0" SelectedValue="{Binding SelectedMmeCode}" SelectedValuePath="Key" DisplayMemberPath="Key" ItemsSource="{Binding MmeCodes}" SelectionChanged="ComboBox_SelectionChanged"
                      Visibility="{Binding IsSingleMmeCode, Converter={StaticResource B2VI}}"/>
            <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource PrimaryButton}" IsEnabled="{Binding IsEditModeInActive}" Visibility="{Binding ReadOnlyMode, Converter={StaticResource B2VI}}" Content="{x:Static res:Resources.Add}" Click="CreateNewProfile_Click"
                    Background="{StaticResource PurpleBrush1}" />
            <TextBox Grid.Column="0" Grid.Row="2" Text="{Binding SearchingName, UpdateSourceTrigger=PropertyChanged}" TextChanged="TextBoxFind_TextChanged" />
            <!-- <TreeView Grid.Column="0" Grid.Row="3" Name="ProfilesTreeView" ItemsSource="{Binding Profiles}" SelectedItemChanged="ProfilesTreeView_SelectedItemChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled" -->
            <!--           VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling" -->
            <!--           VirtualizingStackPanel.CacheLength="50" VirtualizingStackPanel.CacheLengthUnit="Item" -->
            <!--           VirtualizingStackPanel.ScrollUnit="Item" > -->
            <!--     <TreeView.ItemTemplate> -->
            <!--         <HierarchicalDataTemplate> -->
            <!--             <dataTemplate:ProfileHierarchicalDataTemplate/> -->
            <!--         </HierarchicalDataTemplate> -->
            <!--     </TreeView.ItemTemplate> -->
            <!-- </TreeView> -->
            <ListView Grid.Row="3" ItemsSource="{Binding ProfilesSource.View}" SelectedValue="{Binding SelectedProfile}">
                <ListView.ItemTemplate >
                    <DataTemplate >
                        <Label d:DataContext="{d:DesignInstance profiles:MyProfile}" Content="{Binding Name}"></Label>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Grid.Column="0" Grid.Row="4" Content="{x:Static res:Resources.Back}" Style="{StaticResource BackButton}" Click="GoBack_Click" />
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0" Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Column="0" Grid.Row="0" Visibility="{Binding ReadOnlyMode, Converter={StaticResource B2VI}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Grid.Row="0" Text="{Binding SelectedProfileNameCopy}" IsEnabled="{Binding IsEditModeActive}" />
                <Button Grid.Column="1" Grid.Row="0" IsEnabled="{Binding IsEditModeEnabled}" Click="BeginEditProfile_Click" Style="{StaticResource ButtonWithIcon}">
                    <iconPacks:PackIconMaterial Kind="Pencil" />
                </Button>
                <Button Grid.Column="2" Grid.Row="0" IsEnabled="{Binding IsEditModeActive}" Click="CancelEditProfile_Click" Style="{StaticResource ButtonWithIcon}" Margin="10,0,10,0">
                    <iconPacks:PackIconMaterial Kind="Cancel" />
                </Button>
                <Button Grid.Column="3" Grid.Row="0" IsEnabled="{Binding IsEditModeActive}" Click="EndEditProfile_Click" Style="{StaticResource ButtonWithIcon}">
                    <iconPacks:PackIconMaterial Kind="ContentSave" />
                </Button>
            </Grid>
            <Grid Grid.Column="0" Grid.Row="1" Background="{StaticResource ListViewTestParametersBrush}" Visibility="{Binding IsClampingCommutationActive, Converter={StaticResource B2V}}">
                <StackPanel>
                    <Border IsEnabled="{Binding IsEditModeActive}" BorderThickness="1" Background="{StaticResource PurpleBrush2}" BorderBrush="AliceBlue" Margin="10">
                        <profilesPageComponents:AddTestParameterUserControl x:Name="AddTestParameterUserControl" Margin="10" DataContext="{Binding ProfileDeepDataCopy}" AddTestParametersEvent="AddTestParametersEvent_Click" />
                    </Border>
                    <Border BorderThickness="1" Background="{StaticResource PurpleBrush2}" BorderBrush="AliceBlue" Margin="10"
                            Visibility="{Binding ProfileVm.ReadOnlyMode, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Page}, Converter={StaticResource B2V}}">
                        <CheckBox Margin="10" DataContext="{Binding ProfileDeepDataCopy}" IsChecked="{Binding IsHeightMeasureEnabled}" Content="{x:Static res:Resources.MeasureDialog_Title}" />
                    </Border>
                </StackPanel>
            </Grid>
            <!-- <Grid Grid.Column="0" Grid.Row="1" Background="{StaticResource ListViewTestParametersBrush}"  Visibility="{Binding ShowHeightMeasure, Converter={StaticResource B2V}}"> -->
            <!--     <Border BorderThickness="1" Background="{StaticResource PurpleBrush2}" BorderBrush="AliceBlue" Margin="10"> -->
            <!--         <Grid> -->
            <!--             <Grid.ColumnDefinitions> -->
            <!--                 <ColumnDefinition Width="Auto"/> -->
            <!--                 <ColumnDefinition Width="1*"/> -->
            <!--             </Grid.ColumnDefinitions> -->
            <!--             <Grid.RowDefinitions> -->
            <!--                 <RowDefinition Height="Auto"/> -->
            <!--                 <RowDefinition Height="Auto"/> -->
            <!--                 <RowDefinition Height="Auto"/> -->
            <!--             </Grid.RowDefinitions> -->
            <!--             <Label Grid.Column="0" Grid.Row="0"  Content="{x:Static res:Resources.CommutationTypeT}"/> -->
            <!--             <Label Grid.Column="0" Grid.Row="0"  Content="{x:Static res:Resources.CommutationTypeT}"/> -->
            <!--             <CheckBox IsChecked="{Binding ProfileDeepDataCopy.IsHeightMeasureEnabled}" Margin="20"  Content="{x:Static res:Resources.MeasureDialog_Title}" /> -->
            <!--         </Grid> -->
            <!--     </Border> -->
            <!--      -->
            <!-- </Grid> -->
            <!-- <Grid Grid.Column="0" Grid.Row="2"> -->
            <!--     <testParameters:ClampCommutationDataTemplate IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=pages:ProfilesPage}, Path=ProfileVm.IsEditModeActive }" -->
            <!--                                                  Visibility="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=pages:ProfilesPage}, Path=ProfileVm.IsClampingCommutationActive, Converter={StaticResource B2V}}" -->
            <!--                                                  DataContext="{Binding ProfileDeepDataCopy}" /> -->
            <!-- </Grid> -->
            <Grid Grid.Column="0" Grid.Row="3">
                <profilesPageComponents:ListViewTestParametersUserControl ContentIsEnabled="{Binding IsEditModeActive}" ItemSource="{Binding ProfileDeepDataCopy.TestParametersAndNormatives}"
                                                                          VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.ScrollUnit="Pixel" />
            </Grid>

            <Button Grid.Column="0" Grid.Row="4" Style="{StaticResource BackButton}" Content="{x:Static res:Resources.Next}" Visibility="{Binding ButtonNextIsVisible, Converter={StaticResource B2V}}" Command="{Binding ButtonNextRelayCommand}" />

        </Grid>
    </Grid>
</Page>